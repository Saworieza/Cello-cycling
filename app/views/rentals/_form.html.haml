= form_for @rental do |f|
  - if @rental.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rental.errors.count, "error")} prohibited this rental from being saved:"
      %ul
        - @rental.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :cello
    = f.collection_select :cello_id, Cello.order(:name), :id, :name, include_blank: true
    -# = f.text_field :cello
  .field
    = f.label :bike
    = f.collection_select :bike_id, Bike.order(:biketype), :id, :biketype, include_blank:true
    -# = f.text_field :bike
  .field
    = f.label :starttime
    = f.datetime_select :starttime
  .field
    = f.label :returntime
    = f.datetime_select :returntime
  .actions
    = f.submit 'Save'
